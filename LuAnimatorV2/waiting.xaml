<Window x:Class="LuAnimatorV2.ProgressBarTaskOnUiThread"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100" Width="300" Background="#EAEAEA"
        WindowStyle="None"  ResizeMode="NoResize">
    <Grid Margin="20" Background="#00FFFFFF">
        <StackPanel Orientation="Vertical">
            <Label Name="progressTitle" Foreground="Black"/>
            <ProgressBar Minimum="0" Maximum="100" Name="pbStatus" IsIndeterminate="True" Background="#EAEAEA" Height="20"/>
        </StackPanel>
    </Grid>
</Window>